---
import ShadowRoot from "@components/ShadowRoot.astro";
import CodeView from "./CodeView.astro";
type Props = {
  title: string;
  cssString: string;
  htmlString: string;
  jsString?: string;
};

const { title, cssString, htmlString, jsString } = Astro.props;
---

<section
  class="my-10 flex h-[60dvh] max-w-[1440px] flex-col gap-4 px-4 lg:mx-auto lg:px-12"
>
  <button class="mr-auto" id="back"> Back </button>
  <h5 class="text-2xl">
    {title}
  </h5>
  <div class="flex flex-col items-start gap-8 lg:flex-row lg:gap-6">
    <ShadowRoot css={cssString} html={htmlString} js={jsString} />
    <div
      class="relative w-full flex-shrink-0 lg:w-1/2 [&>pre]:h-[60dvh] [&>pre]:lg:h-[80dvh]"
    >
      <CodeView css={cssString} html={htmlString} js={jsString} />
    </div>
  </div>
</section>

<script>
  document.addEventListener("astro:page-load", () => {
    const backBtn = document.getElementById("back");
    if (backBtn) {
      backBtn.addEventListener("click", () => {
        history.back();
      });
    }
  });
</script>
