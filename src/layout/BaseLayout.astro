---
import Header from "@components/Header.astro";
import BaseHead from "./BaseHead.astro";

type Props = {
  title: string;
};
const { title = "Tulip" } = Astro.props;
---

<html lang="en">
  <BaseHead title={title} />
  <body>
    <div class="container relative mx-auto min-h-screen overflow-hidden">
      <Header />
      <main class="">
        <slot />
      </main>
    </div>
  </body>
</html>
