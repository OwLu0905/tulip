{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@animations/*": [
				"src/animations/*"
			],
			"@assets/*": [
				"src/assets/*"
			],
			"@components/*": [
				"src/components/*"
			],
			"@content/*": [
				"src/content/*"
			],
			"@layout/*": [
				"src/layout/*"
			],
			"@styles/*": [
				"src/styles/*"
			]
		}
	}
}
