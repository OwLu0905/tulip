<canvas
  id="noiseCanvas"
  class="absolute left-0 top-0 h-full w-full bg-gradient-to-tr from-orange-300 to-rose-300 opacity-20 [z-index:-1]"
></canvas>

<script>
  const canvas = document.getElementById("noiseCanvas") as HTMLCanvasElement;
  const ctx = canvas.getContext("2d");

  const resize = () => {
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
  };

  const createNoise = () => {
    if (!ctx) return;
    const imageData = ctx.createImageData(canvas.width, canvas.height);
    const data = imageData.data;

    for (let i = 0; i < data.length; i += 4) {
      const rangeValue = Math.floor(Math.random() * 255);
      data[i] = rangeValue; // red
      data[i + 1] = rangeValue; // green
      data[i + 2] = rangeValue; // blue
      data[i + 3] = rangeValue; // alpha
    }

    ctx.putImageData(imageData, 0, 0);
  };

  const animate = () => {
    createNoise();
    requestAnimationFrame(animate);
  };

  // Initialize
  resize();
  animate();

  // window.addEventListener("resize", resize);
</script>
