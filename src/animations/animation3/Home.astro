---
import ShadowRoot from "@components/ShadowRoot.astro";

const html = import.meta.glob<string>("./index.html", {
  query: "?raw",
  import: "default",
});
const css = import.meta.glob<string>("./index.css", {
  query: "?raw",
  import: "default",
});
const js = import.meta.glob<string>("./index.js", {
  query: "?raw",
  import: "default",
});
const htmlString = await html["./index.html"]();
const cssString = await css["./index.css"]();
// const jsString = await js["./index.ts"]();
---

<ShadowRoot css={cssString} html={htmlString} />
